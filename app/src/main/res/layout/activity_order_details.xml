<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:elevation="23dp"
            app:title="Order Details"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            app:titleTextColor="#000" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c"
        android:layout_margin="10dp"
        android:text="Id : 4RNZ4Ew2NbWTeoNBBaoPuU6e9ZI3"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id"
        android:layout_margin="10dp"
        android:text="Name : Eze larry"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_margin="10dp"
        android:text="Email : larry@gmail.com"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_margin="10dp"
        android:text="E12345678"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/Package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_margin="10dp"
        android:text="Package : Diamond â‚¦850,000"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Package"
        android:layout_margin="10dp"
        android:text="Start Date : 20-12-20202"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:layout_margin="10dp"
        android:text="End Date : 20-12-20202"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@id/end"
        android:background="@drawable/take_btn_background"
        android:text="Accept Order"
        android:onClick="takeOrder"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="19sp" />

</RelativeLayout>