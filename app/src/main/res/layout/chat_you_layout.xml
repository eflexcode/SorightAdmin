<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_gravity="start"
    android:layout_margin="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pro_pic"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/messageTextChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pro_pic"
        android:background="@drawable/you_chat"
        android:padding="7dp"
        android:text=""
        android:textIsSelectable="true"
        android:textColor="#fff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageChat"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/you_chat_image"
        android:padding="10dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_pic"
        android:text=""
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/isseen"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginStart="10dp"/>

</RelativeLayout>